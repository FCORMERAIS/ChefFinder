<style>
    .chiefSlogan {
        font-family: 'ABeeZee', serif;
        font-style: italic;
        font-size: 23px;
        color: #EFAF00;
    }

    .chiefDescription {
        font-family: 'Roboto', serif;
        color: #BDB4A7;
        font-weight: 300;
        line-height: 26px;
    }

    .chiefLore {
        border-radius: 4px;
    }

    .chiefEquipments {
        background: rgba(239, 175, 0, 0.1);
        border-radius: 4px;
    }

    .chiefEquipments img {
        width: 40px;
        height: 40px;
    }

    .chiefEquipmentsLabel {
        color: #BDB4A7;
        font-family: 'Roboto', serif;
    }
    
    .chiefEquipmentName {
        font-family: 'Roboto', serif;
        font-size: 13px;
        color: #BDB4A7;
    }
</style>
<div class="swiper-slide d-flex flex-row align-items-end">
    <div class="swpSlideContainer" id="swpChiefsContainer">
        <div class="pageTitle w-75 mt-4 mb-3 px-3">
            <h2>Choisissez votre chef</h2>
        </div>
        <div id="chiefsCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for chief in chiefs %}
                    <div class="carousel-item {{ loop.first ? 'active' }}">
                        <div class="d-flex mt-4">
                            <div class="col-7 ml-5">
                                <div class="chiefLore bg-white px-5 py-4 text-center">
                                    <div class="chiefSlogan">"{{ chief.slogan }}"</div>
                                    <hr class="w-100">
                                    <div class="chiefDescription">{{ chief.description }}</div>
                                </div>
                                <div class="chiefEquipments p-4 mt-3">
                                    <div class="chiefEquipmentsLabel text-center">Je possèdes comme matériel à emporter</div>
                                    <div class="d-flex mt-4 justify-content-around">
                                        {% for equipment in chief.equipments %}
                                            <div class="d-flex flex-column mt-2">
                                                <img class="mx-auto" src="{{ asset('build/images/equipments/' ~ equipment|slug ~ '.svg' ) }}" alt="{{ equipment|slug }}">
                                                <div class="chiefEquipmentName mt-2"> {{ equipment }}</div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <img class="h-100" src="{{ asset('build/images/chiefs/' ~ chief.picture ) }}" alt="{{ chief.firstName ~ chief.lastName }}">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a class="" href="#chiefsCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon rounded-circle p-4" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="" href="#chiefsCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon rounded-circle p-4" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <div class="mainBtn validateBtn btn" data-slide-to="5">Choisir ce chef</div>
        </div>
    </div>
</div>